{
  "name": "kindle-cloud-reader-rpc",
  "displayName": "Kindle Cloud Reader Rich Presence",
  "version": "0.1.0",
  "description": "An extension that enables rich presence for Kindle cloud reader",
  "author": "phusitsom",
  "packageManager": "npm@8.17.0",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "express": "^4.18.1",
    "path-browserify": "^1.0.1",
    "plasmo": "0.53.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "stream-http": "^3.2.0",
    "timers-browserify": "^2.0.12"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "1.2.0",
    "@types/chrome": "0.0.196",
    "@types/discord-rpc": "^4.0.3",
    "@types/express": "^4.17.13",
    "@types/node": "18.7.14",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "prettier": "2.7.1",
    "typescript": "4.8.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*", "http://*/*", "chrome-extension://*/*"
    ],
    "background": {
      "service_worker": "../src/extension/background.ts",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["https://read.amazon.com/*"],
        "js": ["../src/extension/content.ts"]
      }
    ],
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "all_urls"
    ]
  }
}
